// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  login    String @unique
  password String
}

model Dish {
  id       String  @id @default(uuid())
  category String
  name     String
  price    Decimal
  icon     String
  version  String
}
